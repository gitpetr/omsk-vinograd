- if user_signed_in?
	- if current_user.is_admin

		= simple_form_for @pic, html: { multipart: true } do |f|
			- if @pic.errors.any?
				#errors
					%h2
					= pluralize(@pic.errors.count, "error")
					prevented this Pic from saving
					%ul
						- @pic.errors.full_messages.each do |msg|
							%li= msg
			.form-group
				= f.collection_select :category_id, Category.all, :id, :name, { promt: "Категория" }
			.form-group
				= f.input :image, input_html: { class: 'form-control' }, label: "Добавьте картинку"
			.form-group
				= f.input :title, input_html: { class: 'form-control' }, label: "Название"
			.form-group
				= f.input :description, input_html: { class: 'form-control' }, label: "Описание"
			.form-group
				= f.input :price, input_html: { class: 'form-control' }, label: "цена"
				= f.input :for_sale, label: "продаётся"

			= f.button :submit,'сохранить', class: "btn btn-info"