= simple_form_for @article, html: { multipart: true } do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :title, input_html: { class: 'form-control' }, label: "Название"
  .form-group
    = f.input :image, input_html: { class: 'form-control' }, label: "Добавьте картинку"
  .form-group
    = f.input :description, input_html: { class: 'form-control' }, label: "Текст"
  .actions
    = f.submit 'Сохранить'
