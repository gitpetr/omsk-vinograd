= simple_form_for @news, html: { multipart: true } do |f|
  - if @news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news.errors.count, "error")} prohibited this news from being saved:"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :title, input_html: { class: 'form-control' }, label: 'название'
  .form-group
    = f.input :body, input_html: { class: 'form-control' }, label: 'текст'
  .actions
    = f.button :submit, 'сохранить', class: "btn btn-info"
